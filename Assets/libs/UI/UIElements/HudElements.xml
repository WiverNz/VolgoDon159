      </function>
      <function name="SetCourseDegree" funcname="_root.SetCourseDegree">
        <param name="courseDegree" desc="Course degree" type="Number"/>
      </function>
      <function name="SetAccelerationValue" funcname="_root.SetAccelerationValue">
        <param name="accelerationValue" desc="Acceleration value" type="Number"/>
      </function>
      <function name="SetEnginesMaxRpm" funcname="_root.SetEnginesMaxRpm">
        <param name="maxRpm" desc="Max RPM" type="Number"/>
      </function>
      <function name="SetEnginesCurrRpm" funcname="_root.SetEnginesCurrRpm">
        <param name="currRpm" desc="Current RPM" type="Number"/>
