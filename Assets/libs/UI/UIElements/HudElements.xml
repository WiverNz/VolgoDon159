<UIElements name="HudElements">
  <!-- definition of an UI element named "MainMenu" -->
  <UIElement name="MainMenu" mouseevents="1" keyevents="1" cursor="1">
    <!-- gfx/swf file for this UI element -->
    <GFx file="GfxResources/MainMenu.gfx" layer="1">
      <!-- the align mode of this element -->
      <Constraints>
        <Align mode="fullscreen" />
      </Constraints>
    </GFx>
    <!-- available functions -->
    <functions>
      <function name="SetResumeGameState" funcname="_root.SetResumeGameState">
        <param name="isResumeGameState" desc="" type="Boolean"/>
      </function>
      <function name="LoadCrySettings" funcname="_root.LoadCrySettings">
        <param name="cryJsonSettings" desc="" type="String"/>
      </function>
      <function name="SetExtendDebug" funcname="_root.SetExtendDebug">
        <param name="isExtendDebug" desc="Enable extend debug" type="Boolean"/>
      </function>
    </functions>

    <!-- available events that are raised by the Flash asset -->
    <events>
      <event name="StartGame" fscommand="start" desc="Start game" />
      <event name="ResumeGame" fscommand="resume" desc="Resume game" />
      <event name="ExitGame" fscommand="exit" desc="Exit game" />
      <event name="PlaySound" fscommand="playSound">
        <param name="soundName" desc="Sound file to play"/>
      </event>
      <event name="ApplySettings" fscommand="applySettings">
        <param name="crySettings" desc="A json string with the following format: {'parameter': intVal, 'parameter': 'stringVal'}"/>
      </event>
    </events>

    <!-- available variables -->
    <variables>
    </variables>

    <!-- available arrays -->
    <Arrays>
    </Arrays>

    <!-- available movieclips -->
    <MovieClips>
    </MovieClips>
  </UIElement>
