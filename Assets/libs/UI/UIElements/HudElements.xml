    <GFx file="GfxResources/ShipInterface.gfx" layer="1">
      <!-- the align mode of this element -->
      <Constraints>
        <Align mode="fullscreen" />
      </Constraints>
    </GFx>
    <!-- available functions -->
    <functions>
      <function name="SetValuesJson" funcname="_root.SetValuesJson">
        <param name="jsonValuesString" desc="Json Values String" type="String"/>
      </function>
      <function name="SetCoordinates" funcname="_root.SetCoordinates">
        <param name="latCoord" desc="Latitude coordinate" type="Number"/>
		<param name="longCoord" desc="Longitude coordinate" type="Number"/>
      </function>
      <function name="SetRudderValue" funcname="_root.SetRudderValue">
